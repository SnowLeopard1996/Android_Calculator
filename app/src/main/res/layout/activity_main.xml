<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/block"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/showOut"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/block"
            android:textSize="26sp"
            android:textColor="@color/button1"
            android:maxLength="100"
    />

    <TextView
            android:id="@+id/tvInput"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:background="@color/block"
            android:textSize="48sp"
            android:textColor="@color/button1"
            android:maxLength="12"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal"
    >
        <Button
                android:onClick="onClear"
                android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@android:color/background_dark"
                style="@style/Widget.AppCompat.Button"/>

        <Button
                android:onClick="onBackSpace"
                android:id="@+id/btnSpace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="←"
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@android:color/background_dark"
        />

        <Button
                android:onClick="onOperator"
                android:id="@+id/btnPercent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onOperator"
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@color/block"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal"
    >
        <Button
                android:onClick="onDigit"
                android:id="@+id/btnSeven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"
        />

        <Button
                android:onClick="onDigit"
                android:id="@+id/btnEight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onDigit"
                android:id="@+id/btnNight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onOperator"
                android:id="@+id/btnTimes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×"
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@color/block"
        />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal"
    >
        <Button
                android:onClick="onDigit"
                android:id="@+id/btnFour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"
        />

        <Button
                android:onClick="onDigit"
                android:id="@+id/btnFive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onDigit"
                android:id="@+id/btnSix"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onOperator"
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@color/block"
        />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal"
    >
        <Button
                android:onClick="onDigit"
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"
        />

        <Button
                android:onClick="onDigit"
                android:id="@+id/btnTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onDigit"
                android:id="@+id/btnThree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onOperator"
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@color/block"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal"
    >
        <Button
                android:onClick="onDigit"
                android:id="@+id/btnBrackets"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="( )"
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@android:color/background_dark"
        />

        <Button
                android:onClick="onDigit"
                android:id="@+id/btnZero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="26sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onDecimalPoint"
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@android:color/background_dark"

        />

        <Button
                android:onClick="onEqual"
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="30sp"
                android:textColor="@color/button1"
                android:background="@color/background2"
        />
    </LinearLayout>

</LinearLayout>